#remove some stupid / dangerous key bindings
bind k
bind ^k
bind .
bind ^\
bind \\
bind ^h
bind h
bind ^x

# for japanese
defkanji utf-8
defencoding utf-8
defc1 off
encoding utf-8 utf-8

# bell
bell_msg "^G"
vbell off

# caption
caption always "%{= wb} %-w%{=bu dr}%n %t%{-}%+w %= %{=b wk} %{=b wb}%Y/%m/%d(%d) %{=b wm}%c %u"

# binding
bind n screen
bind j next
bind l windowlist
bind x remove
bind X remove
bind s split
bind t focus
bind i focus
bind = resize =
bind + resize +1
bind - resize -1
bind h prev
bind ^H prev

#escpe
escape ^Z^z
